<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Try1RASP.Views.MainPage"
             xmlns:local="clr-namespace:Try1RASP.CustomControls"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0">
            <HorizontalStackLayout
                x:Name="Choose_settings"
                  Margin="2"
                Spacing="12"
                  >

                <local:ToggleButton
                    FontSize="Body"
                    x:Name="raspisanie_chck_bx_txt"
                    Text="Расписание"
                    Grid.Row="0"
                    Grid.Column="0"
                    />
                <local:ToggleButton
                    FontSize="Body"
                    x:Name="changes_chck_bx_txt"
                    Text="Изменения"
                   
                    />
                <Label 
                    x:Name="CurrentWeek"
                    Text="{Binding Week, StringFormat='{Неделя: {0}'}"
                    VerticalOptions="Center"
                    HorizontalOptions="End"
                    FontSize="Body"
                       />
            </HorizontalStackLayout>
            <ScrollView
                x:Name="Choose_day_ScrollView"
                Margin="5"
                HorizontalScrollBarVisibility="Always"
                Orientation="Horizontal"
                Padding="12"
                >
                   
                <HorizontalStackLayout
                    x:Name="Choose_day_HSL"
                    Spacing="12"
                    >
                    <local:ToggleButton
                        x:Name="Monday"
                        Text="Понедельник"
                        Clicked="Day_Toggled"
                        
                        
                        />

                    <local:ToggleButton 
                        x:Name="Tuesday"
                        Text="Вторник"
                        Clicked="Day_Toggled"
                        />
                    <local:ToggleButton 
                        x:Name="Wednesday"
                        Text="Среда"
                        Clicked="Day_Toggled"
                        />
                    <local:ToggleButton 
                        x:Name="Thursday"
                        Text="Четверг"
                        Clicked="Day_Toggled"
                        />
                    <local:ToggleButton 
                        x:Name="Friday"
                        Text="Пятница"
                        Clicked="Day_Toggled"
                        />
                    <local:ToggleButton 
                        x:Name="Saturday"
                        Text="Суббота"
                        Clicked="Day_Toggled"
                        />
                    <local:ToggleButton 
                        x:Name="Sunday"
                        Text="Воскресенье"
                        Clicked="Day_Toggled"
                        />
                </HorizontalStackLayout>
            </ScrollView>
            <CollectionView x:Name="colView"
                            >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border
                                Stroke="Gray"
                                BackgroundColor="#e1e1e1">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="30"/>
                                    </Border.StrokeShape>
                                    <Label
                                        x:Name="Lesson_label"
                                        FontSize="Header"
                                        IsEnabled="{Binding Vision}"
                                        Grid.Row="0"
                                        Text="{Binding Lesson,TargetNullValue=''}"
                                        FontAttributes="Bold"
                                        HorizontalTextAlignment="Center"
                                        VerticalTextAlignment="Center"
                                        
                                    />
                            </Border>
                            <Label
                              x:Name="Time_label"
                              IsEnabled="{Binding Vision}"
                              Grid.Row="1"
                              Text="{Binding Time,TargetNullValue='',StringFormat='Время: {0}'}"
                              VerticalOptions="Center"
                              HorizontalOptions="StartAndExpand"
                            />
                            
                            <Label 
                              x:Name="Room_label"
                              IsEnabled="{Binding Vision}"
                              Grid.Row="2"
                              Text="{Binding Room,TargetNullValue='',StringFormat='Кабинет: {0}'}"
                              VerticalOptions="Center"
                              HorizontalOptions="StartAndExpand"
                            />
                            
                            <Label
                              x:Name="FIO_label"
                              IsEnabled="{Binding Vision}"
                              Grid.Row="3"
                              Text="{Binding FIO,TargetNullValue='',StringFormat='Преподаватель: {0}'}"
                              VerticalOptions="Center"
                              HorizontalOptions="StartAndExpand"
                            />
                            
                            <Label 
                              x:Name="Type_label"                               
                              IsEnabled="{Binding Vision}"
                              Grid.Row="4"
                              Text="{Binding Type,TargetNullValue='',StringFormat='Подгруппа: {0}'}"
                              VerticalOptions="Center"
                              HorizontalOptions="StartAndExpand"
                            />
                            
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button
                x:Name="CounterBtn"
                Text="Запросить"
                Clicked="GetDataFromApi"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
